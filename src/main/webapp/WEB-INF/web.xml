<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>FirstWebApp</display-name>
	<!-- configure the servlet, when i call /add, call AddServlet class -->

	<servlet>
		<servlet-name>servlet-add</servlet-name>
		<servlet-class>csm.tech.AddServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>servlet-add</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>servlet-square</servlet-name>
		<servlet-class>csm.tech.SquareServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>servlet-square</servlet-name>
		<url-pattern>/square</url-pattern>
		<!-- here, when u send a request for square, it will call SquareServlet -->
	</servlet-mapping>

</web-app>